@model IEnumerable<RealEstate.Models.Home>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3 pt-2">
                <div class="card shadow">
                    <img src="@item.Imagelinks.FirstOrDefault().Link" class="card-img-top rounded-top w-200 p-3" style="width: auto;" alt="Themesberg office">

                    <div class="card-body">
                        <h3 class="h5 card-title mt-3">@item.GeneralizedAddress</h3>
                        @if (@item.Price == 0)
                        {
                            <p class="card-text">$@item.RentPrice CAD Per Month</p><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Learn More</a>
                        }
                        else
                        {
                            <p class="card-text">$@item.Price</p><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Learn More</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

</div>